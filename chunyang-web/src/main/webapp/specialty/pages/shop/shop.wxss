/* pages/shop/shop.wxss */

.shop{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
}
.choose{
  display: flex;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  margin-left: 2%;
}
.company{
  width: 50rpx;
  height: 50rpx;
  margin-left: 2%;
}
.shopname{
  display: flex;
  height: 50rpx;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 2%;
}
.enter{
  display: flex;
  align-items: center;
  font-weight: bold;
  color: #D8D8D8;
  margin-left: 2%;
}
.getcoupon{
  position: absolute;
  right: 2%;
  display: flex;
  align-self: center;
  font-size: 30rpx;
}
.cut-off{
  border: 0;
  border-bottom: 1px solid #ccc;
  background: #999;
  margin-top: 20rpx;
}

.goods{
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.good-image{
  display: flex;
  width: 150rpx;
  height: 150rpx;
  margin-left: 4%;
}
.good-content{
  height: 150rpx;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 4%;
}
.good-title{
  font-size: 24rpx;
}
.good-remark{
  font-size: 24rpx;
  margin-top: 15rpx;
  color: #969696;
}
.good-price{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}
.good-currentprice{
  font-size: 24rpx;
  margin-top: 15rpx;
  color: red;
}
.good-costprice{
  font-size: 24rpx;
  margin-top: 15rpx;
  color: #969696;
  text-decoration: line-through;
  margin-left: 15rpx;
}
.good-edit{
  position: absolute;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  align-items: center;
}
.good-edit-image{
  position: relative;
  top: 15rpx;
  width: 40rpx;
  height: 40rpx;
}
.good-num{
  position: relative;
  font-size: 24rpx;
  color: #969696;
  margin-bottom: 15rpx;
  top: 110rpx;
}